# Maintainer: James Stronz <comrumino@archstrike.org>

_pkgname=stronz
pkgname="python-${_pkgname}-git"
pkgver=v1.0.3.r3.dd7cb2a
pkgrel=1
pkgdesc="Personal Website: stro.nz"
arch=('x86_64')
url="https://github.com/comrumino/$_pkgname"
license=('GPL3')
depends=('python' 'python-tornado' 'python-tldextract')
makedepends=('git' 'python-setuptools')
conflicts=('personal-website-git' 'python2-personalwebsite-git')
# source=("${_pkgname}::git+$url")
source=("git+file:///home/archie/repo/$_pkgname")
sha512sums=('SKIP')

pkgver() {
    cd "$srcdir/${_pkgname}"
    printf "%s" "$(git describe --always | sed 's/\([^-]*-\)g/r\1/;s/-/./g')"
}

build() {
  cd "$srcdir/${_pkgname}"
  python setup.py build
}

package() {
  cd "$srcdir/${_pkgname}"
  python setup.py install --root="${pkgdir}" --optimize=1
  install -Dm755 "bin/${_pkgname}" "${pkgdir}/usr/bin/${_pkgname}-py"
  install -Dm644 "misc/${_pkgname}.service" "${pkgdir}/usr/lib/systemd/system/${_pkgname}.service"
}

# vim:se ts=2 sw=2 sts=2 et:
