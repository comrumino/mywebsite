pkgname=personal-website-git
pkgver=406893e
pkgrel=1
pkgdesc="Personal Website"
arch=('x86_64')
url="https://github.com/comrumino/personal-website"
license=('GPL3')
depends=('python2' 'python2-tornado')
provides=('personal-website')
source=('git+https://github.com/comrumino/personal-website')
sha512sums=('SKIP')

pkgver() {
    cd "$srcdir/${pkgname%-git}"
    printf "%s" "$(git describe --always | sed 's/\([^-]*-\)g/r\1/;s/-/./g')"
}

package() {
    cd "$srcdir/${pkgname%-git}"
}
